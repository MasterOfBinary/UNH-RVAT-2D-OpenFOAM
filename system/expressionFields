    pressureGradient
    {
        type expressionField;
        functionObjectLibs
        (
            "libswakFunctionObjects.so"
        );
        outputControl outputTime;
        fieldName gradP;
        dimension [1 -2 -2 0 0 0 0];
        expression "grad(pMean)";
        autowrite true;        
    }

    gradUx
    {
        type expressionField;
        functionObjectLibs
        (
            "libswakFunctionObjects.so"
        );
        outputControl outputTime;
        fieldName gradUMeanx;
        dimension [0 0 -1 0 0 0 0];
        expression "grad(UMean.x)";
        autowrite true;        
    }

    laplacianUx
    {
        type expressionField;
        functionObjectLibs
        (
            "libswakFunctionObjects.so"
        );
        outputControl outputTime;
        fieldName laplacianUMeanx;
        dimension [0 -1 -1 0 0 0 0];
        expression "laplacian(UMean.x)";
        autowrite true;        
    }
